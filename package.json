{
  "name": "key-input-elements",
  "version": "2.0.0",
  "description": "custom elements to input key press events",
  "type": "module",
  "main": "lib/key-input.js",
  "scripts": {
    "prepare": "npm run build",
    "test": "jest",
    "build:ts": "tsc --project ts",
    "build:docs": "cp -vur ts js docs",
    "build": "run-s build:ts build:docs",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:ts": "tsc --noEmit --project ts",
    "lint": "run-p -l lint:*",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier --write .",
    "fix": "run-s fix:*",
    "clean": "rm -fr js types docs/{ts,js}",
    "serve-docs": "http-server -c=-1 docs",
    "watch:ts": "tsc --watch --preserveWatchOutput --project ts",
    "watch:js": "onchange 'js/**/*.js' -- npm run build:docs",
    "watch": "run-p -l watch:* serve-docs"
  },
  "keywords": [
    "web",
    "web-components",
    "custom-elements"
  ],
  "author": "Keiichiro Ui",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^13.24.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "npm-run-all2": "^6.1.1",
    "onchange": "^7.1.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "engine": {
    "node": "^20.x"
  },
  "repository": "https://github.com/kui/key-input-elements.git"
}
